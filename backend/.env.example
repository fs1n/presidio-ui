# Environment variables for the FastAPI backend
PORT=8000
HOST=0.0.0.0

# Presidio services configuration
PRESIDIO_ANALYZER_API_URL=http://localhost:5002
PRESIDIO_ANALYZER_API_KEY=
PRESIDIO_ANONYMIZER_API_URL=http://localhost:5001
PRESIDIO_ANONYMIZER_API_KEY=

# Backend mode (local or external)
# local: Use local Presidio engines
# external: Use external Presidio services (current PHP approach)
ANONYMIZATION_MODE=local

# API Configuration
API_TITLE="Presidio Anonymization Backend"
API_VERSION="1.0.0"
API_DESCRIPTION="Advanced anonymization backend with FastAPI and Presidio"

# Enable development features
DEBUG=True
RELOAD=True

# CORS settings
ALLOWED_ORIGINS=http://localhost:8080,http://localhost:3000,http://127.0.0.1:8080

# File upload settings
MAX_FILE_SIZE=10485760  # 10MB in bytes
UPLOAD_DIR=./uploads
RESULTS_DIR=./results

# OCR settings
TESSERACT_CMD=/usr/bin/tesseract
OCR_LANGUAGE=eng

# Logging
LOG_LEVEL=INFO
